//A. Watermelon
#include <bits/stdc++.h>
using namespace std;
int main()
{
  int n;
  cin>>n;
  if(n>=4&&n%2==0)
  cout<<"YES"<<endl;
  else
  cout<<"NO"<<endl;
   return 0;
}




///A - Way Too Long Words


#include <bits/stdc++.h>
using namespace std;
int main()
{
   int n;
string s;
cin >>n;
for(int i=0;i<n;i++)
{
  cin >>s;
  int q=s.length();
  if(q>10)
  cout<<s[0]<<q-2<<s[q-1]<<endl;
   else
cout<<s<<endl;
 
}
   return 0;
}


//A - Team

#include <bits/stdc++.h>
using namespace std;
int main()
{
      int n,count=0;
cin>>n;
 for(int i=0;i<n;i++)
 {
  int x,y,z;
cin>>x>>y>>z;
   if((x==1)&&(y==1)||(y==1)&&(z==1)||(x==1)&&(z==1))
   count++;
  
 }
cout<<count;
 
   return 0;
}
